<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FillingActivity">

    <Button
        android:id="@+id/realGm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/realGm"
        android:layout_margin="@dimen/_10sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgProf"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp"
        android:layout_marginTop="156dp"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtWriteDescription"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@color/teal_200"
        android:layout_marginHorizontal="@dimen/_30sdp"
        app:layout_constraintEnd_toEndOf="@+id/imgProf"
        app:layout_constraintStart_toStartOf="@+id/imgProf"
        app:layout_constraintTop_toBottomOf="@+id/imgProf" />

    <Button
        android:id="@+id/btnSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnSave"
        app:layout_constraintEnd_toEndOf="@+id/imgSelect"
        app:layout_constraintStart_toStartOf="@+id/imgSelect"
        app:layout_constraintTop_toBottomOf="@+id/imgSelect" />

    <ImageView
        android:id="@+id/imgSelect"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        android:src="@drawable/unstar"
        app:layout_constraintEnd_toEndOf="@+id/txtWriteDescription"
        app:layout_constraintStart_toStartOf="@+id/txtWriteDescription"
        app:layout_constraintTop_toBottomOf="@+id/txtWriteDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>